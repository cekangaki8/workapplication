<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/AppTheme.ActionBarStyle</item>
        <item name="android:editTextBackground">@drawable/apptheme_edit_text_holo_dark</item>
        <item name="android:actionMenuTextColor">@color/gray</item>

    </style>

    <style name="AppTheme.ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/default_background</item>
        <item name="android:titleTextStyle">@style/AppTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="AppTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/red</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/actionbar_title_text_size</item>
    </style>

    <style name="login_edt" parent="@android:style/Widget.Holo.EditText">
        <item name="android:textSize">@dimen/edittext_text_size</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="SpinnerTextViewItem" parent="@android:style/Widget.TextView" >
        <item name="android:background">@color/gray</item>
        <item name="android:titleTextStyle">@style/AppTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="AppTheme.Dialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowNoTitle">false</item>
    </style>

    <style name="heading_between_lines">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/heading_height</item>
        <item name="android:textSize">@dimen/heading_text_size</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="max_weight">
        <item name="android:padding">2dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/heading_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="min_weight_above_line">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/heading_text_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="receptacle_barcode">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">6pt</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="receptacle_detail_rl">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/receptacle_detail_rl_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/receptacle_detail_rl_margin_bottom</item>
    </style>

    <style name="receptacle_detail_headings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/receptacle_detail_headings_margin_bottom
        </item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/heading_text_size</item>
    </style>

    <style name="receptacle_detail_headings_left" parent="receptacle_detail_headings">
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="receptacle_detail_headings_right" parent="receptacle_detail_headings">
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="receptacle_detail_barcode">
        <item name="android:layout_marginTop">@dimen/receptacle_detail_barcode_margin_top</item>
        <item name="android:layout_marginLeft">@dimen/receptacle_detail_barcode_margin_left</item>
        <item name="android:layout_marginBottom">@dimen/receptacle_detail_barcode_margin_bottom
        </item>
        <item name="android:padding">@dimen/receptacle_detail_barcode_padding</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/receptacle_detail_barcode_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/rounded_black_background</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="receptacle_detail_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/receptacle_detail_text_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="receptacle_detail_text_left" parent="receptacle_detail_text">
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="receptacle_detail_text_right" parent="receptacle_detail_text">
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="receptacle_detail_bt_quarantine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/receptacle_detail_bt_quarantine_height</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_quarantine</item>
    </style>

    <style name="quarantine_reason_et_comment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:maxHeight">500dp</item>
        <item name="android:hint">Enter comments here</item>
    </style>

    <style name="quarantine_reason_bt_send">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_quarantine</item>
    </style>

    <style name="recept_events_listview">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:divider">@drawable/grey_divider_line</item>
        <item name="android:dividerHeight">2dp</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="sub_heading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/default_background</item>
    </style>

    <style name="sub_heading_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
