<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:id="@+id/fgmntLogin">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="8"
        android:id="@+id/etLoginUser"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/etLoginPass"
        android:layout_alignStart="@+id/etLoginPass"
        android:layout_marginTop="100dp"
        android:hint="@string/username"
        android:imeOptions="actionNext"
        android:ellipsize="start"
        style="@style/login_edt" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="8"
        android:id="@+id/etLoginPass"
        android:hint="@string/pass"
        android:inputType="textPassword"
        android:layout_below="@+id/etLoginUser"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:imeOptions="actionDone"
        android:imeActionLabel="Log in"
        style="@style/login_edt" />

    <Spinner
        android:id="@+id/ddlFacility"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="200dp"
         />

    <Button
        android:id="@+id/btn_login"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/etLoginPass"
        android:layout_centerHorizontal="true"
        android:text="@string/login"
        android:onClick="onClick"
        android:layout_width="180dp"
        android:layout_height="wrap_content" />
</RelativeLayout>